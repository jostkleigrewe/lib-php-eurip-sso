{
    "name": "jostkleigrewe/lib-php-eurip-sso",
    "description": "OIDC Client Library and Symfony Bundle for EURIP SSO",
    "type": "symfony-bundle",
    "license": "MIT",
    "keywords": ["oidc", "oauth2", "sso", "symfony", "authentication"],
    "require": {
        "php": ">=8.2",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.1 || ^2.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "nyholm/psr7": "^1.8",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^11.0 || ^12.0",
        "symfony/cache": "^7.0 || ^8.0",
        "symfony/framework-bundle": "^7.0 || ^8.0",
        "symfony/security-bundle": "^7.0 || ^8.0",
        "symplify/easy-coding-standard": "^12.0 || ^13.0"
    },
    "suggest": {
        "symfony/framework-bundle": "Required for Symfony bundle integration",
        "symfony/security-bundle": "Required for security authenticator",
        "symfony/cache": "Required for discovery caching",
        "guzzlehttp/guzzle": "HTTP client implementation",
        "symfony/http-client": "HTTP client implementation for Symfony",
        "nyholm/psr7": "PSR-7/PSR-17 implementation"
    },
    "autoload": {
        "psr-4": {
            "Jostkleigrewe\\Sso\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jostkleigrewe\\Sso\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs": "vendor/bin/ecs check",
        "cs:fix": "vendor/bin/ecs check --fix",
        "stan": "vendor/bin/phpstan analyse",
        "quality": [
            "@cs",
            "@stan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
